<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd">

  <!-- Define your services beans -->
  <bean id="userService" parent="baseTransactionProxy">
    <property name="target">
      <bean class="cinemas.services.impl.UserServiceImpl">
        <constructor-arg ref="userRepository"/>
      </bean>
    </property>
  </bean>
  <bean id="bannerService" parent="baseTransactionProxy">
    <property name="target">
      <bean class="cinemas.services.impl.BannerServiceImpl">
        <constructor-arg ref="bannerRepository"/>
      </bean>
    </property>
  </bean>
  <bean id="movieService" parent="baseTransactionProxy">
    <property name="target">
      <bean class="cinemas.services.impl.MovieServiceImpl">
        <constructor-arg ref="movieRepository"/>
      </bean>
    </property>
  </bean>
  <!-- Configure user service and password encoder -->
  <bean id="customUserDetailsService" class="cinemas.services.impl.CustomUserDetailsServiceImpl">
    <constructor-arg ref="userRepository"/>
  </bean>

  <bean id="cityService" parent="baseTransactionProxy">
    <property name="target">
      <bean class="cinemas.services.impl.CityServiceImpl">
        <constructor-arg ref="cityRepository"/>
      </bean>
    </property>
  </bean>

  <bean id="theaterService" parent="baseTransactionProxy">
    <property name="target">
      <bean class="cinemas.services.impl.TheaterServiceImpl">
        <constructor-arg ref="theaterRepository"/>
      </bean>
    </property>
  </bean>
  <bean id="reportService" parent="baseTransactionProxy">
    <property name="target">
      <bean class="cinemas.services.impl.ReportServiceImpl">
        <constructor-arg ref="bookingRepository"/>
      </bean>
    </property>
  </bean>
</beans>
